<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>


    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ExtraExtraLargeTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ExtraLargeTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LargeTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MediumTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActiveNavigationItem" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InactiveNavigationItem" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>


</resources>
