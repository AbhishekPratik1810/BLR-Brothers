<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RL_Contact_Header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/iv_Contact_Back_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                style="@style/LargeTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/iv_Contact_Back_Button"
                android:text="Contact"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/RL_Contact_Header">

            <ImageView
                android:id="@+id/iv_Contact_Banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_screen" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_below="@+id/iv_Contact_Banner">

                <ImageView
                    android:id="@+id/iv_Contact_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_alignTop="@id/tv_Contact_Location"
                    android:layout_alignBottom="@id/tv_Contact_Location"
                    android:gravity="center"
                    android:src="@drawable/ic_location" />
                <TextView
                    android:id="@+id/tv_Contact_Location"
                    android:text="Manasa Sai Apartment
Miryalaguda, Housing Board Colony, Miryalaguda, Telangana 508207"
                    android:layout_toEndOf="@id/iv_Contact_Location"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MediumTextViewStyle"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_Contact_Phone"
                    android:layout_below="@+id/tv_Contact_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_Contact_Phone"
                    android:layout_alignBottom="@id/tv_Contact_Phone"
                    android:gravity="center"
                    android:src="@drawable/ic_call" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_Contact_Phone"
                    android:layout_below="@+id/tv_Contact_Location"
                    android:text="+91 99999 88888"
                    android:layout_toEndOf="@id/iv_Contact_Phone"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MediumTextViewStyle"/>

                <ImageView
                    android:id="@+id/iv_Contact_Mail"
                    android:layout_below="@+id/tv_Contact_Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_Contact_Mail"
                    android:layout_alignBottom="@id/tv_Contact_Mail"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_mail" />
                <TextView
                    android:id="@+id/tv_Contact_Mail"
                    android:layout_below="@+id/tv_Contact_Phone"
                    android:text="mlgblrbrothers@gmail.com"
                    android:layout_toEndOf="@id/iv_Contact_Mail"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MediumTextViewStyle"/>

                <ImageView
                    android:id="@+id/iv_Contact_Website"
                    android:layout_below="@+id/tv_Contact_Mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_Contact_Website"
                    android:layout_alignBottom="@id/tv_Contact_Website"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_website" />
                <TextView
                    android:id="@+id/tv_Contact_Website"
                    android:layout_below="@+id/tv_Contact_Mail"
                    android:text="https://www.blrbrothers.com/"
                    android:layout_toEndOf="@id/iv_Contact_Mail"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/MediumTextViewStyle"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>