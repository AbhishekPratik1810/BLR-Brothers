<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_EventsRV"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_amb_banner"
                android:scaleType="centerCrop"/>
            <ProgressBar
                android:id="@+id/pb_Events_RV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="60dp"
                android:layout_alignBottom="@id/iv_EventsRV"/>

            <TextView
                android:id="@+id/tv_EventsRV_title"
                android:layout_toEndOf="@id/iv_EventsRV"
                android:layout_marginStart="10dp"
                android:text="Event Title"
                style="@style/MediumTextViewStyle"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_EventsRV_Location"
                android:layout_marginStart="10dp"
                android:layout_below="@id/tv_EventsRV_title"
                android:layout_toEndOf="@+id/iv_EventsRV"
                android:text="XYZ City, Hyderabad"
                style="@style/MediumTextViewStyle"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_EventsRV_Time"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/iv_EventsRV"
                android:layout_below="@+id/tv_EventsRV_Location"
                android:text="17th July 2020 10:30 AM"
                style="@style/MediumTextViewStyle"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>